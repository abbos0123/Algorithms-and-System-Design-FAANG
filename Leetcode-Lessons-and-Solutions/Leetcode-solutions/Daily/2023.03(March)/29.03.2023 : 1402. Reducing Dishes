class Solution {
    public int maxSatisfaction(int[] satisfaction) {
        Arrays.sort(satisfaction);
        int all = 0, sum = 0, n = satisfaction.length;
        
        for(int i = n-1; i >=0 && satisfaction[i] > - all; i--){
            all += satisfaction[i];
            sum += all;
        }
        return sum;
    }
}
