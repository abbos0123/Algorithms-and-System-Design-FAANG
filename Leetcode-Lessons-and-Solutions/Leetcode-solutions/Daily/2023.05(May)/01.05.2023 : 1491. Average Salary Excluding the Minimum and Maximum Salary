class Solution {
    public double average(int[] salary) {
        double avg = 0.0;
        int n = salary.length, 
        min = salary[0],
        max = salary[n-1];   
        
        for(int i = 0; i < n; i++)
            if(salary[i] > max)
                max = salary[i]; 
            else if(salary[i] < min)
                min = salary[i];
          
        for(int i = 0; i < n; i++)
            if(salary[i] < max && salary[i] > min)
                avg += salary[i];
        
        return avg /(n-2);
    }
}
